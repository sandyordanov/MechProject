@page
@model MechWeb.Pages.ProfileModel
@{
}
<h3>Profile</h3>
<div class="alert-success">@ViewData["update"]</div>
<div class="container">
    <div class="row border border-4 border-dark p-2">
        <form asp-page-handler="Update" method="post">
            <div class="col">
                <img src="~/programmer.png" />
                <div class="form-group row">
                    <label class="control-label" asp-for="UserDetails.FirstName"></label>
                    <input type="text" asp-for="UserDetails.FirstName" class="form-control" />
                    <span asp-validation-for="UserDetails.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label" asp-for="UserDetails.LastName"></label>
                    <input type="text" asp-for="UserDetails.LastName" class="form-control" />
                    <span asp-validation-for="UserDetails.LastName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label class="control-label" asp-for="UserDetails.Email"></label>
                    <input type="text" asp-for="UserDetails.Email" class="form-control" />
                    <span asp-validation-for="UserDetails.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
        <div class="col">
            <form asp-page-handler="Delete" method="post">
                <button class="btn btn-danger">Delete profile</button>
            </form>
        </div>

    </div>
</div>
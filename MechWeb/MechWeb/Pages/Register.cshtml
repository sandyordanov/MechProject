@page
@model MechWeb.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<partial name="_ValidationScriptsPartial" />
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Register</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label"asp-for="Model.Email">Email Address</label>
                    <input type="text" asp-for="Model.Email" class="form-control"/>
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Password">Password</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.ConfirmPassword">Cofirm Password</label>
                    <input type="password" asp-for="Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="radio" value="CarOwner" id="Owner" class="form-check-input" asp-for="Model.Role" />
                    <label class="form-check-label" asp-for="Model.Role">Car Owner</label>
                </div>
                <div class="mb-3 form-check">
                    <input type="radio" value ="Mechanic" id="Mechanic" class="form-check-input" asp-for="Model.Role" />
                    <label class="form-check-label" asp-for="Model.Role">Mechanic</label>
                </div>
                <div class="mb-3 form-check">
                    <input type="radio" value="ServicePoint" id="ServicePoint" class="form-check-input" asp-for="Model.Role" />
                    <label class="form-check-label" asp-for="Model.Role">Service point</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

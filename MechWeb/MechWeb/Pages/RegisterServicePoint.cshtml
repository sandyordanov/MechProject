@page
@model MechWeb.Pages.RegisterServicePointModel
@{
    ViewData["Title"] = "Register Service Point";
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
    }
<h1>@ViewData["Title"]</h1>

<div class="container">
    <form class="" method="post">
        <div class="row">
            <div class="col-6">
                <h3>Login details</h3>
                <div class="form-group">
                    <label class="control-label" asp-for="BindModel.Username"></label>
                    <input asp-for="BindModel.Username" class="form-control" />
                    <span asp-validation-for="BindModel.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="BindModel.Password"></label>
                    <input asp-for="BindModel.Password" type="password" class="form-control" />
                    <span asp-validation-for="BindModel.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <h3>Personal details</h3>
                <div class="form-group">
                    <label class="control-label" asp-for="BindModel.Name"></label>
                    <input asp-for="BindModel.Name" class="form-control" />
                    <span asp-validation-for="BindModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="BindModel.Address"></label>
                    <input asp-for="BindModel.Address" class="form-control" />
                    <span asp-validation-for="BindModel.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="BindModel.Email"></label>
                    <input asp-for="BindModel.Email" class="form-control" />
                    <span asp-validation-for="BindModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="BindModel.PhoneNumber"></label>
                    <input asp-for="BindModel.PhoneNumber" class="form-control" />
                    <span asp-validation-for="BindModel.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <button class="btn btn-primary" type="submit"> Register</button>
                </div>
            </div>
        </div>
    </form>
</div>

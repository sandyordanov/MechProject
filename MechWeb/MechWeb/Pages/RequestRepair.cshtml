@page
@model MechWeb.Pages.RequestRepairModel
@{
}
<h1 class="text-center">Repair Request</h1>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col">
                    <h3 class="">Selected car</h3>
                </div>

            </div>

            <div class="row border border-4 border-warning rounded-pill bg-dark text-white d-flex align-items-center">
                <div class="col-2 me-3 ms-2">
                    <img src="~/car.png" style="height:75px" class="mx-auto" />
                </div>
                <div class="col-4 ">
                    <p><b>Make: </b>@Model.SelectedCar.Make</p>
                    <p><b>Model: </b>@Model.SelectedCar.Model</p>
                </div>
                <div class="col-4">
                    <p><b>Year: </b>@Model.SelectedCar.Year</p>
                    <p><b>Mileage: </b>@Model.SelectedCar.Mileage</p>
                </div>
            </div>

            <div class="row ">
                <h3 class="text-center mt-2">Repair Info</h3>
                <div class="col">
                    <form method="post">
                        <div class="form-group m-1">
                            <label asp-for="RequestBind.Description"></label>
                            <textarea class="form-control" placeholder="Enter problem description" rows="3"></textarea>
                        </div>
                        <div class="form-check m-1">
                            <label class="control-label" asp-for="RequestBind.OilChange"></label>
                            <input type="checkbox" asp-for="RequestBind.OilChange" class="form-check-input" />
                            <span asp-validation-for="RequestBind.OilChange" class="text-danger"></span>
                        </div>
                        <div class="form-check m-1">
                            <label class="control-label" asp-for="RequestBind.AirFilter"></label>
                            <input type="checkbox" asp-for="RequestBind.AirFilter" class="form-check-input" />
                            <span asp-validation-for="RequestBind.AirFilter" class="text-danger"></span>
                        </div>
                        <div class="form-check m-1">
                            <label class="control-label" asp-for="RequestBind.TyreChange"></label>
                            <input type="checkbox" asp-for="RequestBind.TyreChange" class="form-check-input    />
                            <span asp-validation-for="RequestBind.TyreChange" class="text-danger"></span>
                        </div>
                        <div class="form-check m-1">
                            <label class="control-label" asp-for="RequestBind.CoolantChange"></label>
                            <input type="checkbox" asp-for="RequestBind.CoolantChange" class="form-check-input    />
                            <span asp-validation-for="RequestBind.CoolantChange" class="text-danger"></span>
                        </div>
                        <div class="form-check m-1">
                            <label class="control-label" asp-for="RequestBind.LightBulb"></label>
                            <input type="checkbox" asp-for="RequestBind.LightBulb" class="form-check-input    />
                            <span asp-validation-for="RequestBind.LightBulb" class="text-danger"></span>
                        </div>
                        @if (Model.isSelected)
                        {
                            <button type="submit" class="btn btn-primary m-1">ConfirmDetails</button>
                        }                      
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3 class="">User info</h3>
                </div>
            </div>
            <div class="row border border-4 border-warning rounded-pill bg-dark text-white d-flex align-items-center">
                <div class="col-2 me-3 ms-2">
                    <img src="~/programmer.png" style="height:75px" class="mx-auto" />
                </div>
                <div class="col-4 ">
                    <p><b>First name: </b>@Model.UserDetails.FirstName</p>
                    <p><b>Last name: </b>@Model.UserDetails.LastName</p>
                </div>
                <div class="col-4">
                    <p><b>Email: </b>@Model.UserDetails.Email</p>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h3>Repair shops</h3>
            @foreach (var item in Model.RepairShops)
            {
                <div class="row rounded border border-4 border-light m-2">
                    <div class="col-3 ">
                        <img src="~/repairservices.png" style="height:100px" class="" />
                    </div>
                    <div class="col-7">
                        <h5>@item.Name</h5>
                        <p><b>Adress: </b> @item.Address</p>
                        <p><b>Email: </b>@item.Email</p>
                        <p><b>Phone number: </b>@item.PhoneNumber</p>
                    </div>
                    <div class="col-2">
                        <div class="row">
                            <p><b>Rating:</b> @item.GetRating() / 5 (@item.Votes)</p>
                        </div>
                        <div class="row">
                            <form asp-page-handler="SelectShop" method="post">
                                <input type="hidden" name="id" value="@item.Id" class="form-control" />
                                <button type="submit">Select</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    
</div>
@page
@model MechWeb.Pages.ShowCarsModel
@{

}
<h1>Your registered cars</h1>
<div class="alert-danger">@ViewData["isLogged"]</div>

<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <a href="/AddCar" class="btn btn-primary">Add a car</a>
            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th></th>
                            <th style="width: 25%;">Make</th>
                            <th style="width: 25%;">Model</th>
                            <th style="width: 25%;">Year</th>
                            <th style="width: 25%;">Mileage</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model.CarList)
                        {
                            <tr>
                                <td><img src="~/car.png" style="height:50px" /></td>
                                <td style="font-size: 14px;">@car.Make</td>
                                <td style="font-size: 14px;">@car.Model</td>
                                <td style="font-size: 14px;">@car.Year</td>
                                <td style="font-size: 14px;">@car.Mileage</td>
                                <td style="font-size: 14px;">
                                    <form method="post" asp-for="car.Id">
                                        <input type="hidden" name ="carId" value="@car.Id" class="form-control" />
                                        <button type="submit">Repair Request</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-7">
            <h3>Dont have cars?</h3>
            <p>If you do not have any cars listed here register your car by filling in a simple form</p>

            <h3>Options</h3>
            <p>After you have created a car linked to your profile you can press the "RepairRequest" button. The system will redirect you to the next series of pages in which you can select what, where and when you want to be done to your car.</p>
        </div>

    </div>
</div>

